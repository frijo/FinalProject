@{
    ViewBag.Title = "Create";
}

@Styles.Render("~/Styles/Bootstrap.css", "~/Styles/Bootstrap.min.css")
@Styles.Render("~/Styles/Style.css")


<meta name="viewport" content="width=device-width" />
    <form class="form-horizontal" method="post" enctype="multipart/form-data">

      
      <fieldset>
        <legend>Edit Blog</legend>
            <div class="form-group">
              <label for="Title" class="col-lg-2 control-label">Title</label>
              <div class="col-lg-10">
                <input type="text" class="form-control" id="Title" name="Title" placeholder="Title" data-val="true" data-val-required="This field is required" data-val-color="red">
              </div>
            </div>


            <div class="form-group">
              <label for="Title" class="col-lg-2 control-label">Date</label>
              <div class="col-lg-10">
                    <input type="date" id="Date" name="Date" class="form-control">
              </div>
            </div>

          
          
            <div class="form-group">
                <label for="Content" class="col-lg-2 control-label">Content</label>
                    <div class="col-lg-10">
                        
                        <textarea rows="20"  class="form-control" id="Content" name="Content" placeholder=" Content" data-val="true" data-val-required="This field is required" data-val-color="red"></textarea>
          
                    </div>
            </div>
        
         
            
          
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
              
              <input type="submit" value="Edit" class="btn btn-warning" >
              
              @Html.ActionLink("Go Back", "Index")

              </div>
            </div>
          </fieldset>
        
      </form>
