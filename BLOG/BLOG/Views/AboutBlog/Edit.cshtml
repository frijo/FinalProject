@{
    ViewBag.Title = "Edit";
}
    
        @Styles.Render("~/Styles/Bootstrap.css", "~/Styles/Bootstrap.min.css")
        @Styles.Render("~/Styles/Style.css")
        
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
