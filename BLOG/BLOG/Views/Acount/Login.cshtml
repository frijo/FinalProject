@{
    ViewBag.Title = "Login";
}
        @Styles.Render("~/Styles/Bootstrap.css", "~/Styles/Bootstrap.min.css")
        @Styles.Render("~/Styles/Style.css")



@using (Html.BeginForm())
{
    <form id="FormLogin">  
        <div id="DivLoging">
            <h1 >Login</h1>
            <br>
            <div class="form-group">
              <label for="LoginUser" class="col-lg-2 control-label">User</label>
              <div class="col-lg-10">
                <input type="text" class="form-control" id="LoginUser" name="LoginUser" placeholder="User">
              </div>
            </div>
            
            <div class="form-group">
              <label for="LoginPass" class="col-lg-2 control-label">Password</label>
              <div class="col-lg-10">
                <input type="password" class="form-control" id="LoginPass" name="LoginPass" placeholder="Password"><br>
              </div>

            </div>
              
            <div class="col-lg-10 col-lg-offset-2">
              
              <input type="submit" value="Login" class="btn btn-success" >
              
              <button class="btn btn-danger">Cancel</button>

            </div>
            

        </div>

    </form>
    
 }

