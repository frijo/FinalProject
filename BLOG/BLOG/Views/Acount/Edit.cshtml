<form class="form-horizontal" method="post" enctype="multipart/form-data">
  <meta name="viewport" content="width=device-width" />
    
    
      
      <fieldset>
        <legend>Edit Information</legend>
          
       <input name="id" type="hidden" value= "@ViewBag.blogger.ID"><br>
        
          <div class="form-group">
              
              <label for="NickName" class="col-lg-2 control-label">Nick Name</label>
          <div class="col-lg-10">
            <input type="text" value= "@ViewBag.blogger.NickName" class="form-control" id="NickName" name="NickName" placeholder="Nick Name" data-val="true" data-val-required="This field is required" data-val-color="red">
          </div>
        </div>
        <div class="form-group">
          <label for="Password" class="col-lg-2 control-label">Digit your new Password</label>
          <div class="col-lg-10">
            
            <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" data-val="true" data-val-required="This field is required" data-val-color="red">
            
          </div>
        </div>
                    <div class="form-group">
          <label for="Password2" class="col-lg-2 control-label">Re-Confirm Password</label>
          <div class="col-lg-10">
              <input type="password" class="form-control" id="Password2" name="Password2" placeholder="Password" data-val-equalto-other="*.Password"> 
            
          </div>
        </div>
        <div class="form-group">
          <label for="Name" class="col-lg-2 control-label">Name</label>
          <div class="col-lg-10">
            <input type="text" value= "@ViewBag.blogger.Name" class="form-control" id="Name" name ="Name" placeholder="Name" data-val="true" data-val-required="This field is required" data-val-color="red">
            
          </div>
        </div>
          <div class="form-group">
          <label for="Ocupation" class="col-lg-2 control-label">Ocupation</label>
          <div class="col-lg-10">
            <input type="text" value= "@ViewBag.blogger.Ocupacion" class="form-control" id="Ocupation" name ="Ocupation" placeholder="Ocupation">
            
          </div>
        </div>
        <div class="form-group">
          <label for="SN1"  class="col-lg-2 control-label">Social NetWork</label>
          <div class="col-lg-10">
            <input type="text" value= "@ViewBag.blogger.SocialNet1" class="form-control" id="SN1" name="SN1" placeholder="Social Network">
            
          </div>
        </div>
        <div class="form-group">
          <label for="SN2" class="col-lg-2 control-label">Social NetWork 2</label>
          <div class="col-lg-10">
            <input type="text" value= "@ViewBag.blogger.SocialNet2" class="form-control" id="SN2" name="SN2" placeholder="Social Network">
            
          </div>
        </div><br>
          
